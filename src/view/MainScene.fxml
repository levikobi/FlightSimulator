<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.canvas.Canvas?>

<?import view.HeightMapDisplayer?>
<HBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainSceneController">
<children>
    <VBox prefHeight="400.0" prefWidth="400.0">
        <children>
            <HBox alignment="CENTER" spacing="5.0">
                <children>
                    <Button mnemonicParsing="false" prefHeight="31.0" prefWidth="120.0" text="Connect" />
                    <Button onAction="#loadDataFile" mnemonicParsing="false" prefHeight="31.0" prefWidth="120.0" text="Load Data" />
                    <Button mnemonicParsing="false" prefHeight="31.0" prefWidth="120.0" text="Calculate Path" />
                </children>
                <VBox.margin>
                    <Insets left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </HBox>
            <HeightMapDisplayer
                    fx:id="mapDisplayer"
                    height="350.0"
                    width="400.0"
            >
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin></HeightMapDisplayer>
        </children>
    </VBox>

    <VBox prefHeight="400.0" prefWidth="350.0">
        <children>
            <RadioButton onAction="#loadAutopilotScript" mnemonicParsing="false" prefHeight="21.0" prefWidth="138.0" text="Autopilot">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" top="10.0" />
                </VBox.margin></RadioButton>
            <TextArea fx:id="textarea" prefHeight="350.0" prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
                </VBox.margin></TextArea>
        </children>
    </VBox>
</children>
</HBox>